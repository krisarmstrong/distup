# =============================================================================
# distup EditorConfig
# https://editorconfig.org
# =============================================================================

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML (GitHub Actions)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab
